---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png"; // Replace with your own image
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Nunmi.ai logo"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Welcome to Nunmi.ai
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Your partner in ML and Engineering projects. We offer top-notch consulting services and a wide range of educational courses, both online and offline.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="/services"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />
         Explore Our Services
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/courses"
        class="flex gap-1 items-center justify-center">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
         Our Courses
      </Link>
    </div>
  </div>
</main>
